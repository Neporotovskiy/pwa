{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "paths": {
      "features/*": ["./src/features/*"],
      "hooks/*": ["./src/hooks/*"],
      "libraries/*": ["./src/libraries/*"],
      "pages/*": ["./src/pages/*"],
      "components/*": ["./src/components/*"],
      "utilities/*": ["./src/utilities/*"]
    },
    "allowImportingTsExtensions": true
  },
  "include": ["src"]
}
